---
import Layout from "../layouts/Layout.astro";
import DashboardHeader from "../components/DashboardHeader.astro";
import DashboardCard from "../components/DashboardCard.astro";

import MiniLink from "../components/MiniLink.astro";

import epiccLogo from "../images/sottoriva/EPICC.png";

const cards = {
  epicc: {
    title: "EPICC",
    logo: epiccLogo,
    alt: "EPICC logo",
    website: "https://www.nature.com/articles/s41586-022-05311-x",
    links: {
      github: "https://github.com/sottorivalab/EPICC2021_data_analysis",
      paper1: "https://www.nature.com/articles/s41586-022-05311-x",
      paper2: "https://www.nature.com/articles/s41586-022-05202-1",
      ega: "https://ega-archive.org/studies/EGAS00001005230",
      mendeley:
        "https://data.mendeley.com/v1/datasets/7wx3chtsxx/draft?a=b4295445-b3b1-459b-a0ea-a5d970c6778b",
      figshare: "https://doi.org/10.6084/m9.figshare.c.6122193.v2",
      figshare2: "https://doi.org/10.6084/m9.figshare.c.6011476.v1",
    },
  },
};
---

<Layout title="Sottoriva Group">
  <DashboardHeader slot="header">
    <a
      slot="logo"
      href="https://humantechnopole.it/en/research-groups/sottoriva-group/"
      target="_blank"
      class="link"
      >Sottoriva Group
    </a>
  </DashboardHeader>
  <h1 slot="title">Sottoriva Group</h1>
  <h2 slot="title">Manuscripts, Apps and Tools</h2>
  <DashboardCard
    slot="grid"
    title={cards.epicc.title}
    logo={cards.epicc.logo}
    alt={cards.epicc.alt}
  >
    <p class="text--sm">
      Sottoriva and Graham lab collaboration on the mechanisms of colorectal
      cancer growth, progression and dissemination in patients for anticipating
      the course of the disease in large, clinically annotated cohorts.
    </p>
    <a
      href={cards.epicc.website}
      class="btn btn--primary btn--sm btn--full-width"
      target="_blank"><span>Website</span></a
    >
    <MiniLink slot="minilinks" url={cards.epicc.links.github} type="github" />
    <MiniLink slot="minilinks" url={cards.epicc.links.paper1} type="paper" />
    <MiniLink slot="minilinks" url={cards.epicc.links.paper2} type="paper" />
    <MiniLink slot="minilinks" url={cards.epicc.links.ega} type="ega" />
    <MiniLink
      slot="minilinks"
      url={cards.epicc.links.mendeley}
      type="mendeley"
    />
    <MiniLink
      slot="minilinks"
      url={cards.epicc.links.figshare}
      type="figshare"
    />
    <MiniLink
      slot="minilinks"
      url={cards.epicc.links.figshare2}
      type="figshare"
    />
  </DashboardCard>
</Layout>
