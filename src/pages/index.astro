---
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
const groups = await getCollection("group_leaders");


import  {HTHeaderWeb}  from "@computational-biology-sw-web-dev-unit/ht-vue";
import  {HTThemeSwitcher}  from "@computational-biology-sw-web-dev-unit/ht-vue";

import "@computational-biology-sw-web-dev-unit/ht-design/style.css";
import '@computational-biology-sw-web-dev-unit/ht-vue/style.css'

import GroupCard from "../components/GroupCard.astro";

---

<style>
  .header-content {
    display: flex;
    height: 100%;
    justify-content: center;
    padding-block: var(--size-3);
  }

  @media (min-width: 50em) {
    .header-content{
      justify-content: flex-end;
    }
  }
</style>

<Layout heading="HT Groups">
  <HTHeaderWeb slot="header" client:only>
    <div class="header-content"><HTThemeSwitcher client:only /></div>
  </HTHeaderWeb>
  <h2 class="title" slot="heading">HT Groups</h2>
  {groups.map((group) => <GroupCard group={group} />)}
</Layout>
