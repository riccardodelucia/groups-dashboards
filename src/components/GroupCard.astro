---
const { group } = Astro.props;

const {Content} = await group.render();
const { slug } = group;
---

<article class="groups-card ht-card">
  <a class="ht-reset" href={slug}>
  <Content></Content>
</a>
</article>

<style lang="scss" is:global>

  .groups-card {
    width: 20rem;
    padding: 0;
    text-align: center;

    transition: transform 0.1s;

    box-shadow: var(--shadow-3);

    font-size: var(--font-size-0);

    padding-bottom: var(--size-3);

    &:hover {
      transform: scale(1.05);
    }

    img {
      width: 100%;
      height: 20rem;
      object-fit: cover;
      filter: grayscale(1);
    }
  }
</style>
