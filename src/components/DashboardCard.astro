---
import MiniLink from "./MiniLink.astro";
const { miniLinks, logo } = Astro.props;
---

<style>
  .dashboard-card {
    width: 20rem;

    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--size-3);
    align-items: center;
    transition: transform 60ms ease-in;

    box-shadow: var(--shadow-3);

    &:hover {
      transform: scale(1.05);
    }
  }

  .card-logo {
    height: 3.5rem;
    background-color: white;
  }

  :global(.card-text) {
    font-size: var(--font-size-0);
    display: grid;
    gap: var(--size-3);
  }
</style>

<article class="ht-card ht-container dashboard-card">
  <div class="card-logo">
    <img class="card-logo" src={logo} alt="card logo" />
  </div>
  <div class="card-text"><slot /></div>
  <div class="ht-flex-align-center">
    {miniLinks.map(({ url, type }) => <MiniLink url={url} type={type} />)}
  </div>
</article>
