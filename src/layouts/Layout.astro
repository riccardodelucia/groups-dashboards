---
import '@computational-biology-web-unit/ht-design/style.css';
import {HTFooter, HTHeader} from "@computational-biology-web-unit/ht-vue/components"
import VueFeather from "vue-feather";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<HTHeader is-web={true} client:load>
				<div slot="nav" class="header-nav">
					<a href="/" class="link">
					<VueFeather type="grid"></VueFeather>
					</a>
				</div>
		</HTHeader>
		<div class="web-container">
			<slot></slot>
		</div>
		<HTFooter></HTFooter>
	</body>
</html>
